{
  "name": "zhortein/auditable-bundle",
  "type": "symfony-bundle",
  "description": "Attribute-based audit trail & history logging for Doctrine entities in Symfony, with optional Messenger async persistence.",
  "license": "MIT",
  "keywords": [
    "symfony",
    "symfony-bundle",
    "doctrine",
    "audit",
    "auditable",
    "history",
    "log",
    "messenger"
  ],
  "authors": [
    {
      "name": "David Renard",
      "email": "david.renard.21@free.fr",
      "homepage": "https://www.david-renard.fr",
      "role": "Owner, Developer"
    }
  ],
  "require": {
    "php": ">=8.3",
    "psr/log": "^3.0",
    "doctrine/doctrine-bundle": "^2.5 || ^3.0",
    "doctrine/orm": "^2.12 || ^3.0",
    "symfony/config": "^7.4 || ^8.0",
    "symfony/dependency-injection": "^7.4 || ^8.0",
    "symfony/http-kernel": "^7.4 || ^8.0",
    "symfony/options-resolver": "^7.4 || ^8.0",
    "symfony/framework-bundle": "^7.4 || ^8.0",
    "symfony/messenger": "^7.4 || ^8.0",
    "symfony/security-bundle": "^7.4 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "symfony/phpunit-bridge": "^7.4 || ^8.0",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.60"
  },
  "autoload": {
    "psr-4": {
      "Zhortein\\AuditableBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zhortein\\AuditableBundle\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-main": "0.1-dev"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "phpstan": "vendor/bin/phpstan analyse --no-progress",
    "cs:check": "vendor/bin/php-cs-fixer fix --dry-run --diff",
    "cs:fix": "vendor/bin/php-cs-fixer fix"
  }
}
